<title>Stock material - Water Plant</title>
<script>
	$(document).ready(function() {
		$('#masterload').load("Menu.jsp");
		//document.getElementById("date").valueAsDate=new Date();
		$.post("Stock",{pageload:"getStock"},function(response){
				//alert(response)
				if (response != null) {
					$.noConflict();
					table=$('#mytable').DataTable({
						//destroy : true,
						responsive : true,
						data : response,
						columnDefs:[
									{	"targets":-1,
										"data":null,
										defaultContent:"<button type='button' class='editbutton btn btn-primary' ><span class='glyphicon glyphicon-edit'></span></button> | <button type='button' class='deletebutton btn btn-primary'><span class='glyphicon glyphicon-trash'></span></button>"
									},
									],
						"pageLength" : 5,
						"lengthMenu" : [ 5, 10, 25, 50 ]
					});
				}
			});	
		
		$('#addstock').click(function(){
			var data={
					stockname:$('#stockname').val(),
					qty:$('#qty').val(),
					date:$('#date').val(),
					pageload:"addstock"
			};
			$.post('Stock',$.param(data),function(response){
				if(response == "1"){
					location.reload();
				}
			});
			
		});
		
		$('#date').datepicker({
		    dateFormat: 'yy-mm-dd'
		});
		
		$("#date").focus(function(){
			$("#ui-datepicker-div").css("z-index", "9999");
	    });
		
		$("#addStockButton").bind("click", function(){
			$("#editDiv").hide();
			$("#addDiv").show();
		});
		$(document).on("click", ".editbutton", function(){
			$('#myModal').modal('show');
			var tableData = $(this).closest('tr')
            .find('td')
            .map(function() {
				return $(this).text();
				}).get(); 
			$("#stockname").val(tableData[1]);
			$("#qty").val(tableData[2]);  
			$("#editDiv").show();
			$("#addDiv").hide();
			$("#stockId").val(tableData[0]);
		});
		$(document).on("click", "#editStock", function(){
			  var data={
					  	stockId:$("#stockId").val(),
						stockname:$("#stockname").val(),
						qty:$("#qty").val(),
						pageload:"editStock"
				};
				$.post('Stock',$.param(data),function(response){
					alert(response);
					if(response == "1"){
						location.reload();
					}
				});
		});
		$(document).on("click", ".deletebutton", function(){
			alert("delete");
			var tableData = $(this).closest('tr')
            .find('td')
            .map(function() {
				return $(this).text();
				}).get(); 
			  var data={
					  	stockId:tableData[0],
						pageload:"deletStock"
				};
				$.post('Stock',$.param(data),function(response){
					alert(response);
					if(response == true){
						alert("deleting record");
						location.reload();
					}
				});
		});	  		
	});
</script>
</head>
